<%- include("header") %>
<h1>Patient Measurements</h1>
    <table>
        <tr>
            <th>Patient Name</th>
            <th>Timestamp</th>
            <th>Heart Rate</th>
            <th>Blood Pressure (Systolic)</th>
            <th>Blood Pressure (Diastolic)</th>
            <th>Blood Glucose Level</th>
            <th>Temperature</th>
            <th>Actions</th>
        </tr>
        <% table.results.forEach(function(row){ %>
        <form method="post" action="/private/save_measurement">
            <tr>
                <td><%- row.patient_name + ' ' + row.patient_surname %></td>
                <td><%- row.timestamp %></td>
                <td>
                    <input type = 'text' name="heart_rate" value="<%- row.heart_rate %>" readonly data-row="<%- row.measurement_id %>" class="input-field">
                </td>
                <td>
                    <input type = 'text' name="blood_pressure_systolic" value="<%- row.blood_pressure_systolic %>" readonly data-row="<%- row.measurement_id %>" class="input-field">
                </td>
                <td>
                    <input type = 'text' name="blood_pressure_diastolic" value="<%- row.blood_pressure_diastolic %>" readonly data-row="<%- row.measurement_id %>" class="input-field">
                </td>
                <td>
                    <input type = 'text' name="blood_glucose_level" value="<%- row.blood_glucose_level %>" readonly data-row="<%- row.measurement_id %>" class="input-field">
                </td>
                <td>
                    <input type = 'text' name="temperature" value="<%- row.temperature %>" readonly data-row="<%- row.measurement_id %>" class="input-field">
                </td>
                <td> 
                    <button type="button" id="edit-btn-<%- row.measurement_id %>" class="edit-btn" onclick="enableEdit('<%- row.measurement_id %>')">Edit</button>
                    <button type="submit" name="save" value="<%- row.measurement_id %>" id="save-btn-<%- row.measurement_id %>" class="save-btn" style="display: none;">Save</button>
                </td>
            </tr>
        </form>
        <% }) %>
    </table>

<%- include('footer'); %>
